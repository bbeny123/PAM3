<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/astroCalc"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:baselineAligned="false"
android:orientation="vertical"
android:weightSum="1"
android:tag="big_screen">

    <fragment
        android:id="@+id/fragment"
        android:name="com.bbeny.astroweather.TimeFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        tools:layout="@layout/fragment_time" />

    <fragment
        android:id="@+id/sunFragment"
        android:name="com.bbeny.astroweather.SunFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        tools:layout="@layout/fragment_sun" />

    <fragment
    android:id="@+id/moonFragment"
    android:name="com.bbeny.astroweather.MoonFragment"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.45"
    tools:layout="@layout/fragment_moon" />

</LinearLayout>